CLANG_WARN_FRAMEWORK_INCLUDE_PRIVATE_FROM_PUBLIC       = YES // -Wframework-include-private-from-public
CLANG_WARN_IMPLICIT_SIGN_CONVERSION                    = YES // -Wsign-conversion
