
// Apple Clang - Warning Policies

GCC_TREAT_WARNINGS_AS_ERRORS                           = YES // -Werror
GCC_WARN_INHIBIT_ALL_WARNINGS                          = NO
GCC_WARN_PEDANTIC                                      = NO

// Apple Clang - Warnings - All languages

CLANG_WARN_ASSIGN_ENUM                                 = YES // -Wassign-enum
